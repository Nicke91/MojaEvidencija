<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/categoryItemPadding">

            <ImageView
                android:id="@+id/categoryIcon_imageView"
                android:layout_width="@dimen/categoryItem_iv_icon_size"
                android:layout_height="@dimen/categoryItem_iv_icon_size"
                android:src="@mipmap/ic_no_theme"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/categoryName_textView"
                style="@style/LabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/categoryItem_tv_marginLeft"
                android:layout_marginLeft="@dimen/categoryItem_tv_marginLeft"
                android:layout_toEndOf="@+id/categoryIcon_imageView"
                android:layout_toRightOf="@+id/categoryIcon_imageView"
                android:gravity="center">

            </TextView>

            <TextView
                android:id="@+id/categoryDate_textView"
                style="@style/DatesValuesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/categoryItem_tv_marginLeft"
                android:layout_marginLeft="@dimen/categoryItem_tv_marginLeft"
                android:layout_below="@+id/categoryName_textView"
                android:layout_toEndOf="@+id/categoryIcon_imageView"
                android:layout_toRightOf="@+id/categoryIcon_imageView"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/categoryMore_imageView"
                android:layout_width="@dimen/categoryItem_iv_icon_size"
                android:layout_height="@dimen/categoryItem_iv_icon_size"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_category_delete"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>