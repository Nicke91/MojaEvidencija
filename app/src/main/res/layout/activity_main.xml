<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nicke.mojaevidencija.com.milos.nicke.mojaevidencija.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/category_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/layout_no_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/category_no_data_iv"
            android:layout_width="@dimen/no_data_img_width"
            android:layout_height="@dimen/no_data_img_height"
            android:layout_marginTop="@dimen/no_data_img_margin_top"
            android:src="@drawable/theme_book_clock_trans"
            android:visibility="visible" />

        <TextView
            android:id="@+id/category_no_data_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:text="@string/main_create_theme"
            android:textColor="@color/colorMainBckg"
            android:textSize="@dimen/textSizeTitle" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_no_data_marginTop"
            android:src="@mipmap/ic_category_add" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/fab_corner_marginBottom"
        android:layout_marginEnd="@dimen/fab_corner_marginRight"
        android:layout_marginRight="@dimen/fab_corner_marginRight"
        android:src="@mipmap/ic_category_add"
        android:visibility="invisible" />


</android.support.design.widget.CoordinatorLayout>
